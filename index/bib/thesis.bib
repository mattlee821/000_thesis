journal = {PloS one},
keywords = {Adult,Blood Glucose,Body Mass Index,Dyslipidemias,Fasting,Female,Humans,Insulin Resistance,Male,Metabolic Networks and Pathways,Metabolome,Metabolomics,Myocardium,Obesity,Phenotype,Prospective Studies,blood,metabolism},
