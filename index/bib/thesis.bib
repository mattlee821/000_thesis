issn = {2046-4053},
journal = {Systematic reviews},
keywords = {*Automation,*Evidence-based medicine,*Internet,*Mobile Applications/standards,*Research Design,*Review Literature as Topic,*Systematic reviews,Feedback,Humans,Randomized Controlled Trials as Topic,Time Factors},
language = {eng},
month = {dec},
number = {1},
