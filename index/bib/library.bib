author = {Sahlman, Perttu and Nissinen, Markku and Puukka, Pauli and Jula, Antti and Salomaa, Veikko and M{\"{a}}nnist{\"{o}}, Satu and Lundqvist, Annamari and Valsta, Liisa and Perola, Markus and F{\"{a}}rkkil{\"{a}}, Martti and {\AA}berg, Fredrik},
