number = {6},
pages = {880--899},
title = {{Of mice and men: The physiological role of adipose triglyceride lipase (ATGL)}},
url = {http://www.sciencedirect.com/science/article/pii/S1388198118303354},
volume = {1864},
year = {2019}
}
@article{Davies2018,
