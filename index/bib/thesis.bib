issn = {2167-9843},
journal = {PeerJ Preprints},
keywords = {STROBE-MR,mendelian randomization,reporting guidelines},
pages = {e27857v1},
title = {{STROBE-MR: Guidelines for strengthening the reporting of Mendelian randomization studies}},
url = {https://doi.org/10.7287/peerj.preprints.27857v1},
