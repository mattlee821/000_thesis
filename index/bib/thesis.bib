journal = {BMJ},
month = {jul},
pages = {k601},
title = {{Reading Mendelian randomisation studies: a guide, glossary, and checklist for clinicians}},
url = {http://www.bmj.com/content/362/bmj.k601.abstract},
volume = {362},
