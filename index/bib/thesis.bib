journal = {Nature genetics},
keywords = {Algorithms,Bayes Theorem,Female,Genetic Association Studies,Genome,Genotyping Techniques,Human,Humans,Linear Models,Polymorphism,Quantitative Trait Loci,Single Nucleotide,methods},
language = {eng},
month = {mar},
number = {3},
pages = {284--290},
