issn = {0029-6643},
journal = {Nutrition Reviews},
month = {jun},
number = {suppl{\_}1},
pages = {S7--S12},
title = {{Adipose Tissue Expandability in the Maintenance of Metabolic Homeostasis}},
url = {https://doi.org/10.1111/j.1753-4887.2007.tb00331.x},
volume = {65},
year = {2007}
}
