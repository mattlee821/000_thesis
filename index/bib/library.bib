journal = {BMJ Global Health},
month = {sep},
number = {5},
pages = {e001542},
title = {{Sex and area differences in the association between adiposity and lipid profile in Malawi}},
url = {http://gh.bmj.com/content/4/5/e001542.abstract},
volume = {4},
year = {2019}
}
