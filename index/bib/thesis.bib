title = {{Genetic Evidence for Different Adiposity Phenotypes and Their Opposing Influences on Ectopic Fat and Risk of Cardiometabolic Disease}},
url = {http://diabetes.diabetesjournals.org/content/70/8/1843.abstract},
volume = {70},
year = {2021}
}
@article{Jo2018,
