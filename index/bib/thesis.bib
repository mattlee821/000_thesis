journal = {American Journal of Epidemiology},
month = {feb},
number = {3},
pages = {228--239},
title = {{How Useful Is Body Mass Index for Comparison of Body Fatness across Age, Sex, and Ethnic Groups?}},
url = {https://doi.org/10.1093/oxfordjournals.aje.a008733},
volume = {143},
year = {1996}
}
