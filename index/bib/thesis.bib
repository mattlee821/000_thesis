keywords = {*Causality,*Genetic Variation,*Mendelian Randomization Analysis,Humans,Mendelian randomization,Models,Monte Carlo Method,Regression Analysis,Statistical,direct effect,indirect effect,instrumental variable,mediation},
language = {eng},
month = {apr},
