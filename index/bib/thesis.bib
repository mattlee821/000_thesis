title = {{Trans Effects on Gene Expression Can Drive Omnigenic Inheritance}},
url = {https://pubmed.ncbi.nlm.nih.gov/31051098 https://www.ncbi.nlm.nih.gov/pmc/articles/PMC6553491/},
