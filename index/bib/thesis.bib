issn = {2050-084X},
journal = {eLife},
keywords = {biomarkers,covid-19,pneumonia},
pages = {e63033},
publisher = {eLife Sciences Publications, Ltd},
title = {{Metabolic biomarker profiling for identification of susceptibility to severe pneumonia and COVID-19 in the general population}},
url = {https://doi.org/10.7554/eLife.63033},
volume = {10},
year = {2021}
}
