keywords = {explained variance,genome-wide association study,maximum likelihood method,missing heritability},
month = {jul},
number = {5},
pages = {341--349},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{Novel method to estimate the phenotypic variation explained by genome-wide association studies reveals large fraction of the missing heritability}},
